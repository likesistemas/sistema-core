#!/bin/bash

source composer-util

COMPOSER_JSON_HOME=$( get_composer_home )
ARQUIVO_APP="${COMPOSER_JSON_HOME}/app";
ARQUIVO_PHP_APP="${COMPOSER_JSON_HOME}/app.php";

if [ -f "${ARQUIVO_PHP_APP}" ]; then
	echo "Configurando App '${1}'"
	
	if [ -f "${ARQUIVO_APP}" ]; then
		chmod +x ${ARQUIVO_APP}
	else
		ARQUIVO_APP="/usr/local/bin/run-app ${ARQUIVO_PHP_APP}";
	fi

	chmod +x ${ARQUIVO_PHP_APP}
	ln -s ${ARQUIVO_APP} /usr/local/bin/${1}
	chmod +x /usr/local/bin/${1}
fi;